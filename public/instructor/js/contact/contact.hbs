<div class="panel-overlay"></div>
<!-- Right Panel with Cover effect -->
<div class="panel panel-right panel-cover">
    <div class="side-bar-padding">
        {{#each descendingBolts}}
            <div class="bootstrap-panel panel-sidebar">
                  <div class="panel-heading">
                    <h3 class="panel-title">BOLT {{attributes.BoltNum}}</h3>
                  </div>
                  <div class="panel-body">
                    <div class="panel-body-row">
                        <div class="bolt-num-information">
                            <span id="numPos">{{attributes.numPos}}</span>
                            <img class="response-icon small no-border sidebar" src="/glyphicons/check.png">
                        </div>
                        <div class="bolt-num-information">
                            <span id="numNeg">{{attributes.numNeg}}</span>
                            <img class="response-icon small no-border sidebar" src="/glyphicons/x.png">
                        </div>
                    </div>
                    <div class="panel-body-row">
                        <span id="totalBolts">{{attributes.totalResponses}}</span>
                    </div>
                    <div class="panel-body-row">
                        SENT AT <span id="timeOfBolt">{{attributes.timeOfBolt}}</span>
                    </div>
                  </div>
            </div>
        {{/each}}
    </div>
</div>

